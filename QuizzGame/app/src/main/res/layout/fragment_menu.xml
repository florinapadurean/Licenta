<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.padurean.quizzgame.Menu.LevelsMenu">

    <HorizontalScrollView
        android:id="@+id/horizontal_menu_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/general_knowledge"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@color/translucent_grey"
                >

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="center"
                    android:text="General Knowledge"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/puzzle"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@color/translucent_grey">
                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:text="Image puzzle" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/space_puzzle_hard"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/puzzle_hard"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@color/translucent_grey"
                android:visibility="gone">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:text="Image puzzle hard" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>

            <LinearLayout
                android:id="@+id/battleship"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:orientation="vertical"
                android:background="@color/translucent_grey">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:textSize="20sp"
                    android:layout_marginTop="40dp"
                    android:text="Battleship" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
            </LinearLayout>
        </LinearLayout>
    </HorizontalScrollView>

