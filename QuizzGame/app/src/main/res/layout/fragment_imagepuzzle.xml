<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_puzzle"
    android:background="@mipmap/triunghiuri">
    <ProgressBar
        android:id="@+id/progressbar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:id="@+id/textInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Drag the picture above the one you'd like to swap"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="60dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/empty_box1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/unicorn1_1"
                />

            <FrameLayout
                android:id="@+id/empty_box3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/unicorn2_2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/empty_box2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/unicorn1_2"
                />

            <FrameLayout
                android:id="@+id/empty_box4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/unicorn2_1"
                />

        </LinearLayout>
    </LinearLayout>

    <ProgressBar android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_gravity="center" />


</LinearLayout>