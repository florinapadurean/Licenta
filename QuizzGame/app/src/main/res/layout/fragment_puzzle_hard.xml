<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_puzzle_hard"
    android:background="@mipmap/triunghiuri">
    <ProgressBar
        android:id="@+id/progressbar1"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Drag the picture above the one you'd like to swap"
        android:textSize="20dp"/>

    <LinearLayout
        android:id="@+id/grid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginTop="40dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/empty_box1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock0_3"
                />

            <FrameLayout
                android:id="@+id/empty_box2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock2_0"
                />

            <FrameLayout
                android:id="@+id/empty_box3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock1_2"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/empty_box4"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock0_1"
                />

            <FrameLayout
                android:id="@+id/empty_box5"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock2_3"
                />

            <FrameLayout
                android:id="@+id/empty_box6"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock1_0"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/empty_box7"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock2_2"
                />

            <FrameLayout
                android:id="@+id/empty_box8"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock0_0"
                />


            <FrameLayout
                android:id="@+id/empty_box9"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock1_3"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:id="@+id/empty_box10"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock2_1"
                />

            <FrameLayout
                android:id="@+id/empty_box11"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock0_2"
                />


            <FrameLayout
                android:id="@+id/empty_box12"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/clock1_1"
                />
        </LinearLayout>


    </LinearLayout>
    <ProgressBar android:id="@+id/progress"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="104dp"
        android:layout_height="95dp"
        android:layout_gravity="center" />
</LinearLayout>